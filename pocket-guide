  <!-- ====== JS: TTS with es-MX preference ====== -->
  <script>
    function speakText(text){
      if(!('speechSynthesis' in window)){
        alert('Tu navegador no soporta s√≠ntesis de voz. Prueba con Chrome, Firefox o Safari.');
        return;
      }
      if(speechSynthesis.speaking){
        speechSynthesis.cancel();
        setTimeout(()=>startSpeaking(text),100);
      } else {
        startSpeaking(text);
      }
    }
    function startSpeaking(text){
      const utterance = new SpeechSynthesisUtterance(text);
      utterance.lang = 'es-MX';

      const voices = speechSynthesis.getVoices();
      const mexicanVoice = voices.find(v =>
        v.lang.includes('es-MX') ||
        v.lang.includes('es-US') ||
        v.lang.includes('es-AR') ||
        v.lang.includes('es-CO') ||
        (v.lang.includes('es') && !v.lang.includes('es-ES'))
      );
      if(mexicanVoice){ utterance.voice = mexicanVoice; }

      utterance.rate = 0.8; utterance.pitch = 1; utterance.volume = 1;

      const button = event.target;
      button.classList.add('playing'); button.innerHTML = '‚è∏Ô∏è';

      utterance.onend = function(){
        button.classList.remove('playing'); button.innerHTML = 'üîä';
      };
      utterance.onerror = function(){
        button.classList.remove('playing'); button.innerHTML = 'üîä';
        alert('Error al reproducir audio. Verifica que tu navegador permita audio.');
      };
      try { speechSynthesis.speak(utterance); }
      catch (e){
        button.classList.remove('playing'); button.innerHTML = 'üîä';
        alert('Error al iniciar la s√≠ntesis de voz.');
      }
    }
    speechSynthesis.onvoiceschanged = function(){ /* preload voices */ };
    window.addEventListener('beforeunload', function(){
      if(speechSynthesis.speaking){ speechSynthesis.cancel(); }
    });
    function testAudio(){ speakText('Hola'); }
  </script>
</body>
</html>
